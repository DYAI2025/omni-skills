{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Marker Policy Schema",
  "description": "Configuration for learned marker detection policy",
  "type": "object",
  "properties": {
    "family_multipliers": {
      "type": "object",
      "description": "Multipliers for marker families (e.g., UNCERTAINTY: 1.5)",
      "additionalProperties": {
        "type": "number",
        "minimum": 0.1,
        "maximum": 3.0
      }
    },
    "sem_window": {
      "type": "integer",
      "description": "Window size for SEM composition (messages)",
      "minimum": 1,
      "maximum": 10,
      "default": 3
    },
    "clu_window": {
      "type": "integer",
      "description": "Window size for CLU detection (messages)",
      "minimum": 2,
      "maximum": 15,
      "default": 5
    },
    "learning_rate": {
      "type": "number",
      "description": "Learning rate used during training",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "trained_epochs": {
      "type": "integer",
      "description": "Number of training epochs completed",
      "minimum": 0
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of policy creation",
      "format": "date-time"
    }
  },
  "required": ["family_multipliers", "sem_window", "clu_window"],
  "additionalProperties": true
}
